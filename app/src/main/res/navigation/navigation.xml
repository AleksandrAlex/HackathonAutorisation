<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="ru.suslovalex.hackathonautorisation.ui.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_confirmAccountFragment"
            app:destination="@id/confirmAccountFragment" />
        <action
            android:id="@+id/action_startFragment_to_accountCreateFragment"
            app:destination="@id/accountCreateFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmAccountFragment"
        android:name="ru.suslovalex.hackathonautorisation.ui.ConfirmAccountFragment"
        android:label="ConfirmAccountFragment"
        tools:layout="@layout/fragment_confirm_account">
        <action
            android:id="@+id/action_confirmAccountFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_confirmAccountFragment_to_listAllTeamsFragment"
            app:destination="@id/listAllTeamsFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountCreateFragment"
        android:name="ru.suslovalex.hackathonautorisation.ui.AccountCreateFragment"
        android:label="fragment_account_create"
        tools:layout="@layout/fragment_account_create" >
        <action
            android:id="@+id/action_accountCreateFragment_to_startFragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/action_accountCreateFragment_to_listAllTeamsFragment"
            app:destination="@id/listAllTeamsFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="ru.suslovalex.hackathonautorisation.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/listAllTeamsFragment"
        android:name="ru.suslovalex.hackathonautorisation.ListAllTeamsFragment"
        android:label="fragment_list_all_teams"
        tools:layout="@layout/fragment_list_all_teams" >
        <action
            android:id="@+id/action_listAllTeamsFragment_to_createCommandFragment"
            app:destination="@id/createCommandFragment" />
        <action
            android:id="@+id/action_listAllTeamsFragment_to_teamDescriptionFragment"
            app:destination="@id/teamDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/createCommandFragment"
        android:name="ru.suslovalex.hackathonautorisation.CreateTeamFragment"
        android:label="fragment_create_command"
        tools:layout="@layout/fragment_create_team" >
        <action
            android:id="@+id/action_createCommandFragment_to_listAllTeamsFragment"
            app:destination="@id/listAllTeamsFragment" />
    </fragment>
    <fragment
        android:id="@+id/teamDescriptionFragment"
        android:name="ru.suslovalex.hackathonautorisation.TeamDescriptionFragment"
        android:label="fragment_team_description"
        tools:layout="@layout/fragment_team_description" />
</navigation>